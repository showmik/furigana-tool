<Window x:Class="FuriganaTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="370"
        MinHeight="370"
        Width="420"
        MinWidth="420"
        MaxWidth="420"
        ResizeMode="CanResize">

    <DockPanel Background="BlanchedAlmond" LastChildFill="False">

        <Grid DockPanel.Dock="Top" Height="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Kanji"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

            <TextBlock Grid.Column="1"
                       Text="Furigana"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
        </Grid>

        <ScrollViewer DockPanel.Dock="Top" Background="White" VerticalAlignment="Stretch">
            <Grid x:Name="TextBoxGrid" Margin="10,5,5,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBox Grid.Row="0" Grid.Column="0" Height="30" Margin="5,5,5,5" />
                <TextBox Grid.Row="0" Grid.Column="1" Height="30" Margin="5,5,5,5" />
                <TextBox Grid.Row="1" Grid.Column="0" Height="30" Margin="5,5,5,5" />
                <TextBox Grid.Row="1" Grid.Column="1" Height="30" Margin="5,5,5,5" />
                <TextBox Grid.Row="2" Grid.Column="0" Height="30" Margin="5,5,5,5" />
                <TextBox Grid.Row="2" Grid.Column="1" Height="30" Margin="5,5,5,5" />
                <TextBox Grid.Row="3" Grid.Column="0" Height="30" Margin="5,5,5,5" />
                <TextBox Grid.Row="3" Grid.Column="1" Height="30" Margin="5,5,5,5" />
            </Grid>
        </ScrollViewer>

        <Grid x:Name="ControlsGrid"
              DockPanel.Dock="Bottom"
              Margin="10,10,15,10"
              Height="auto"
              MinHeight="120"
              Background="BlanchedAlmond">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button x:Name="RunButton"
                    Grid.Row="0"
                    Grid.Column="0"
                    Height="30"
                    Margin="10,10,10,5"
                    Content="RUN" />

            <Button x:Name="ClearButton"
                    Grid.Row="0"
                    Grid.Column="1"
                    Height="30"
                    Margin="10,10,10,5"
                    Content="CLEAR" />

            <Button x:Name="AddRowButton"
                    Grid.Row="0"
                    Grid.Column="2"
                    Height="30"
                    Margin="10,10,10,5"
                    Content="ADD" />

            <TextBox Grid.Row="1"
                     Grid.Column="0"
                     Grid.ColumnSpan="2"
                     Height="30"
                     Margin="10,5,10,10" />

            <Button x:Name="CopyButton"
                    Grid.Row="1"
                    Grid.Column="3"
                    Height="30"
                    Margin="10,5,10,10"
                    Content="Copy" />
        </Grid>
    </DockPanel>
</Window>